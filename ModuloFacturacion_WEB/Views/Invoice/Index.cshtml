@model IEnumerable<ModuloFacturacion_WEB.Models.FactClient>
@using ModuloFacturacion_WEB.Models

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css" />
    <link rel="stylesheet" type="text/css" href="css/style.css">
</head>
<body>
    <div class="card">
        <div class="card-header">
            <h2>
                FACTURACIÓN
            </h2>
        </div>
        <br />
        <form method="post" asp-controller="Invoice" asp-action="PDFFact">
            <button type="submit" class="btn btn-danger" value="Generate PDF">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-earmark-pdf" viewBox="0 0 16 16">
                    <path d="M14 14V4.5L9.5 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2zM9.5 3A1.5 1.5 0 0 0 11 4.5h2V14a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h5.5v2z" />
                    <path d="M4.603 14.087a.81.81 0 0 1-.438-.42c-.195-.388-.13-.776.08-1.102.198-.307.526-.568.897-.787a7.68 7.68 0 0 1 1.482-.645 19.697 19.697 0 0 0 1.062-2.227 7.269 7.269 0 0 1-.43-1.295c-.086-.4-.119-.796-.046-1.136.075-.354.274-.672.65-.823.192-.077.4-.12.602-.077a.7.7 0 0 1 .477.365c.088.164.12.356.127.538.007.188-.012.396-.047.614-.084.51-.27 1.134-.52 1.794a10.954 10.954 0 0 0 .98 1.686 5.753 5.753 0 0 1 1.334.05c.364.066.734.195.96.465.12.144.193.32.2.518.007.192-.047.382-.138.563a1.04 1.04 0 0 1-.354.416.856.856 0 0 1-.51.138c-.331-.014-.654-.196-.933-.417a5.712 5.712 0 0 1-.911-.95 11.651 11.651 0 0 0-1.997.406 11.307 11.307 0 0 1-1.02 1.51c-.292.35-.609.656-.927.787a.793.793 0 0 1-.58.029zm1.379-1.901c-.166.076-.32.156-.459.238-.328.194-.541.383-.647.547-.094.145-.096.25-.04.361.01.022.02.036.026.044a.266.266 0 0 0 .035-.012c.137-.056.355-.235.635-.572a8.18 8.18 0 0 0 .45-.606zm1.64-1.33a12.71 12.71 0 0 1 1.01-.193 11.744 11.744 0 0 1-.51-.858 20.801 20.801 0 0 1-.5 1.05zm2.446.45c.15.163.296.3.435.41.24.19.407.253.498.256a.107.107 0 0 0 .07-.015.307.307 0 0 0 .094-.125.436.436 0 0 0 .059-.2.095.095 0 0 0-.026-.063c-.052-.062-.2-.152-.518-.209a3.876 3.876 0 0 0-.612-.053zM8.078 7.8a6.7 6.7 0 0 0 .2-.828c.031-.188.043-.343.038-.465a.613.613 0 0 0-.032-.198.517.517 0 0 0-.145.04c-.087.035-.158.106-.196.283-.04.192-.03.469.046.822.024.111.054.227.09.346z" />
                </svg> Generar PDF
            </button>
        </form>
        <div class="card-body">
            <div class="row align-items-end">
                <div class="col-sm-4">
                    <div class="mb-2">
                        <div class="search_select_box">
                            <select class="selectpicker" data-style="btn-outline-info" aria-label="Default select example" name="Clientes" id="cliente" onChange="clienteSeleccionado()" data-live-search="true">
                                @foreach (var item in ViewBag.ListaClientes)
                                {
                                    <option class="clientes">@(((FactClient)item).CliIdentification) - @(((FactClient)item).CliName)</option>
                                }
                            </select>
                        </div>

                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="mb-2">
                         <select class="selectpicker" data-style="btn-outline-info" aria-label="Default select example" >
                                @foreach (var item in ViewBag.ListaTipoPago)
                                {
                                    <option class="pagos">@(((FactPayType)item).TypId). @(((FactPayType)item).Typ)</option>
                                }
                         </select>
                    </div>
                </div>
            </div>

            <hr />

            <h6>
                DATOS CLIENTE
            </h6>

            <div class="row align-items-end">
                <div class="col-sm-4">
                    <div class="mb-2">
                        <label for="exampleInputEmail1" class="form-label">Cédula</label>
                        <input type="text" class="form-control form-control-sm" id="txtcedula" value="
                        @ViewBag.SearchFor">
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="mb-2">
                        <label for="exampleInputEmail1" class="form-label">Tipo Cliente</label>
                        <input type="text" class="form-control form-control-sm" id="txttipo">
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="mb-2">
                        <label for="exampleInputEmail1" class="form-label">Nombre</label>
                        <input type="text" class="form-control form-control-sm" id="txtnombre">
                    </div>
                </div>
            </div>

            <div class="row align-items-end">
                <div class="col-sm-4">
                    <div class="mb-2">
                        <label for="exampleInputEmail1" class="form-label">Dirección</label>
                        <input type="text" class="form-control form-control-sm" id="txtdireccion">
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="mb-2">
                        <label for="exampleInputEmail1" class="form-label">Correo</label>
                        <input type="text" class="form-control form-control-sm" id="txtcorreo">
                    </div>
                </div>
            </div>

            <hr />
            <h6>
                DETALLE DE VENTA
            </h6>
            <div class="row align-items-end">
                <div class="col-sm-3">
                    <div class="mb-2">
                        <div class="search_select_box">
                            <select class="selectpicker" data-style="btn-outline-secondary" aria-label="Default select example" name="select" id="producto" onChange="valor()" data-live-search="true">
                                @foreach (var item in ViewBag.ListaProductos)
                                {
                                    <option value="@item" class="optionP">@(((Product)item).prod_id). @(((Product)item).prod_nombre) - @(((Product)item).prod_descripcion)</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="mb-2">
                        <label for="exampleInputEmail1" class="form-label">Precio</label>
                        <input type="text" class="form-control form-control-sm" id="txtprecio">
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="mb-2">
                        <label for="exampleInputEmail1" class="form-label">Cantidad</label>
                        <input type="text" class="form-control form-control-sm" id="txtcantidad">
                    </div>
                </div>
                <div class="col-sm-3">
                    <button class="btn btn-success mb-2 btn-sm" id="btnAgregar">Agregar</button>
                    <button class="btn btn-info mb-2 btn-sm" id="btnTerminar">Terminar</button>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    <table class="table table-bordered table-sm" id="tbProducto">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">Producto</th>
                                <th scope="col">Precio</th>
                                <th scope="col">Cantidad</th>
                                <th scope="col">IVA</th>
                                <th scope="col">Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>

                    </table>
                </div>
            </div>
            <div class="row">
                <div class="mb-2">
                    <label for="exampleInputEmail1" class="form-label">TOTAL</label>
                    <input type="text" class="form-control form-control-sm" id="tdtotal" value="">
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>
    <script src="js/script.js"></script>
</body>
</html>


@section Scripts{
    <script>
        function valor() {
            var select = document.getElementById("producto");
            var options = document.getElementsByClassName("optionP");
            var resp = options[select.selectedIndex];
            console.log(resp.value)
            return resp.text;
        }
    </script>
    <script>
        function productoSeleccionado() {
            var select = document.getElementById("producto");
            var options = document.getElementsByClassName("optionP");
            var resp = options[select.selectedIndex];
            
            return resp.value;
        }
    </script>


    <script>
        function clienteSeleccionado() {
            var select = document.getElementById("cliente");
            var options = document.getElementsByClassName("clientes");
            var resp = options[select.selectedIndex];

            (document.getElementById("txtcedula")).value = ((resp.text).split(" -"))[0];
            (document.getElementById("txtnombre")).value = ((resp.text).split(" -"))[1];
            return ((resp.text).split(" -"))[0];
        }
    </script>
    <script>
        $('select').selectpicker();
        $(function () {
            $('.search_select_box select').selectpicker();
        });
                
    </script>

    <script>

        var total;
        $("#btnAgregar").on("click", function () {
            var subtotal = parseFloat($("#txtprecio").val()) * parseFloat($("#txtcantidad").val())
            var detalle = []
            total = 0;
            var producto = productoSeleccionado()

            console.log(producto.prod_nombre)

            $("#tbProducto tbody").append(
                $("<tr>").append(
                    $("<td>").text(valor()),
                    $("<td>").text($("#txtprecio").val()),
                    $("<td>").text($("#txtcantidad").val()),
                    $("<td>").text("false"),
                    $("<td>").text(subtotal)

                )
            )

            $("#tbProducto > tbody > tr").each(function (i, tr) {
                detalle.push({
                    total: $(tr).find("td:eq(4)").text()
                })

                total = total + parseFloat($(tr).find("td:eq(4)").text())
            })

            function sd() {
                (document.getElementById("tdtotal")).value = total;
            }

            sd();

        })
    </script>
}